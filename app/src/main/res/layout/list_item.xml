<?xml version="1.0" encoding="utf-8"?>
<co.lujun.androidtagview.TagContainerLayout
    android:id="@+id/tagview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="10dp"

    app:container_enable_drag="false"
    app:horizontal_interval="10dp"
    app:vertical_interval="10dp"
    app:tag_theme="none"
    app:tag_clickable="true"
    app:tag_text_color="@android:color/white"
    app:tag_border_color="@color/colorBlue"
    app:tag_background_color="@color/colorBlue"
    app:container_border_radius="0dp"
    app:container_background_color="@android:color/transparent"
    app:container_gravity="center"
    app:container_border_width="0dp"
    app:tag_corner_radius="0dp"
    app:tag_ripple_alpha="0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" />